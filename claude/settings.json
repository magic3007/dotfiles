{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_MODEL": "claude-4-5-opus"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(command:*)",
      "Bash(source:*)",
      "Bash(curl:*)",
      "Bash(bash:*)",
      "Bash(export NVM_DIR=\"$HOME/.nvm\":*)",
      "Bash([:*)",
      "Bash(. \"$NVM_DIR/nvm.sh\":*)",
      "Bash(nvm install:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(git commit:*)",
      "Bash(codex:*)",
      "Bash(echo:*)",
      "Bash(export PATH:*)",
      "Bash(~/.nvm/versions/node/v24.13.0/bin/codex:*)",
      "Bash(./install:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --check ."
          }
        ]
      }
    ]
  },
  "attribution": { "commit": "", "pr": "" },
  "language": "Chinese",
  "agents": {
    "pr-implementation-analyzer": "./agents/pr-implementation-analyzer.json"
  }
}
